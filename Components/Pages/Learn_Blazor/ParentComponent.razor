@page "/learnblazor/parentComponent"

<h3>ParentComponent</h3>

<_ChildComponent OnButtonClick="ShowMessage" Title="This title is passed as a parameter from parent component">
    <ChildSomeContent>
       Some text between Two tags from the parent component
    </ChildSomeContent>
    
    <ChildContent>
        <p>This is Child Content from Parent Component</p>
        <br />
        <p class="text-primary">Some Other Text</p>
    </ChildContent>
    




<p>@messageText</p>

<_ChildComponent></_ChildComponent>

@code {
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Button inside child component is clicked";
    }
}
